<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.SignUpDialogController">
    
    <children>
        <VBox spacing="10" alignment="CENTER" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Inscription Ménage" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <TextField fx:id="nomField" promptText="Nom du ménage"/>

            <TextField fx:id="codeAccesField" promptText="Code d'accès"/>

            <HBox spacing="10" alignment="CENTER">
                <Button text="OK" onAction="#handleOk"/>
                <Button text="Cancel" onAction="#handleCancel"/>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
